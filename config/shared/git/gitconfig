[include]
  path = ~/.git_author
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore_global
  editor = /usr/bin/env vim
[branch]
  autosetuprebase = always
[push]
  default = simple
[url "git@github.com:"]
  insteadOf = https://github.com/
[alias]
  prune-local = !git branch --merged | tr -d '*' | grep -Ev '(master|dev)' | xargs -n1 git branch -d
  dc = !clear && git diff --cached
  d = diff
  aa = add --all
  ff = merge --ff-only
  c = commit
  cam = commit --amend
  co = checkout
  cm = commit -m
  cp = cherry-pick
  s = status
  l = log --graph --oneline --decorate
[pager]
  log = (type diff-highlight > /dev/null 2>&1 && diff-highlight | less -R) || less -R
  show = (type diff-highlight > /dev/null 2>&1 && diff-highlight | less -R) || less -R
  diff = (type diff-highlight > /dev/null 2>&1 && diff-highlight | less -R) || less -R
